<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dh.ejerciciosandroid.MainActivity">

    <EditText
        android:id="@+id/main_editText_ingresarnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresar nombre"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/main_editText_ingresaredad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresar edad"
        android:inputType="number"
        android:textSize="50dp" />


    <TextView
        android:id="@+id/main_textView_enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:textSize="50dp" />

</LinearLayout>
