<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dh.loginregisterfragments.FragmentFormulario">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/fragment_formulario_txtview_nombreapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My App"
            android:textSize="26dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/fragment_formulario_txtedit_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="username" />
        <EditText
            android:id="@+id/fragment_formulario_txtedit_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/fragment_formulario_button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"/>
    </LinearLayout>

</LinearLayout>
