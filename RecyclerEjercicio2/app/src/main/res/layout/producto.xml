<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/producto_xml">

    <ImageView
        android:id="@+id/imageview_fondo_producto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/not_found" />

    <TextView
        android:id="@+id/txtview_nombre_producto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/imageview_fondo_producto"
        android:background="@color/gris"
        android:text="Computadora Asus"
        android:textColor="@color/blanco"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtview_precio_producto"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/imageview_fondo_producto"
        android:text="$6900"
        android:textColor="@color/verde"
        android:textSize="25dp"
        android:textStyle="bold" />
</RelativeLayout>