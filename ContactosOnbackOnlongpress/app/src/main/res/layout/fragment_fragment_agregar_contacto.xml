<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dh.contactosonbackonlongpress.FragmentAgregarContacto">

    <ImageView
        android:id="@+id/imageview_contacto_agregar_contacto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="60dp"
            android:id="@+id/radiogroup_elegir_tipo_contacto">

            <RadioButton
                android:id="@+id/radiobutton_perro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingLeft="20dp"
                android:text="PERRO"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radiobutton_persona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingLeft="20dp"
                android:text="PERSONA"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radiobutton_goku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="GOKU"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_aceptar_agregar_contacto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ACCEPT"
            android:textColor="@color/verde"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/button_cancelar_agregar_contacto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CANCEL"
            android:textColor="@color/rojo"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
